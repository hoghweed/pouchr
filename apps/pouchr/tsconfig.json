{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "fastify-tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "noUnusedLocals": false,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true
    }
}